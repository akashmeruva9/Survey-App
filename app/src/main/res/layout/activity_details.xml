<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/zomatowhite"
    tools:context=".form.Details">

    <RelativeLayout
        android:id="@+id/details_rl1"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background = "@drawable/action_background_curved"
        >

        <Button
            android:id="@+id/details_back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_baseline_keyboard_backspace_24"
            android:backgroundTint="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/actor"
            android:gravity="center"
            android:text="Details"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"/>
    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/homepage_cardview1"
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/details_tv2"
        app:layout_constraintTop_toBottomOf="@id/details_rl1">


        <RelativeLayout
            android:id="@+id/cv1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cv3"
            android:background="@drawable/homepagebtn_rounded">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/pending"
                android:backgroundTint="@color/white" />
        </RelativeLayout>


        <TextView
            android:id="@+id/cv_tv1"
            android:layout_width="100dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/cv_tv2"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/actor"
            android:text="Reschedule"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/cv_tv2"
            android:layout_width="100dp"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@id/cv3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/cv_tv1"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/actor"
            android:text="Call"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            />

        <RelativeLayout
            android:id="@+id/cv3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@id/cv1"
            android:background="@drawable/homepagebtn_rounded">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_baseline_call_24"
                android:backgroundTint="@color/white"/>

        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:id="@+id/details_tv2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Details"
        android:textSize="30sp"
        android:fontFamily="@font/actor"
        app:layout_constraintTop_toBottomOf="@id/homepage_cardview1"
        android:textColor="@color/black"
        android:layout_marginLeft="30dp"
        app:layout_constraintBottom_toTopOf="@id/details_ll1"
        />

    <LinearLayout
        android:id="@+id/details_ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/homepagebtn_rounded"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/details_tv2"
        app:layout_constraintBottom_toTopOf="@id/start_survey_btn"
        >

        <TextView
            android:id="@+id/detail_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zomatowhite"
            android:fontFamily="@font/actor"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:padding="5dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/detail_adress_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zomatowhite"
            android:fontFamily="@font/actor"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/detail_phone_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zomatowhite"
            android:fontFamily="@font/actor"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/detail_vehicle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/zomatowhite"
            android:fontFamily="@font/actor"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:textColor="@color/black"
            android:textSize="16sp"/>

    </LinearLayout>

    <Button
        android:id="@+id/start_survey_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toBottomOf="@id/details_ll1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/login_btn_bck"
        android:text="Start"
        android:textColor="@color/zomatowhite"
        android:textAllCaps="false"
        android:textSize="25dp"
        android:layout_marginBottom="50dp"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
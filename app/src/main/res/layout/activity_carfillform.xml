<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9D9D9"
    tools:context=".form.carfillform">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/fillform_rl1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background = "@drawable/action_background_curved"
            >

            <Button
                android:id="@+id/carfillform_back_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/ic_baseline_keyboard_backspace_24"
                android:backgroundTint="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/actor"
                android:gravity="center"
                android:text="Fill Form"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/Timer_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/fillform_rl1"
            android:layout_marginRight="10dp"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toTopOf="@id/model_et"
            />

        <ProgressBar
            android:id="@+id/Loaction_pg_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/fillform_rl1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            />

        <TextView
            android:id="@+id/Location_tv"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@id/fillform_rl1"
            android:layout_marginLeft="20dp"
            android:text="Getting location..."
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toTopOf="@id/model_et"
            />



        <TextView
            android:id="@+id/tv124"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Model"
            app:layout_constraintTop_toBottomOf="@id/Location_tv"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/model_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custum_input"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="#636060"
            app:layout_constraintTop_toBottomOf="@id/tv124"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />


        <TextView
            android:id="@+id/tv125"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Odometer Reading"
            app:layout_constraintTop_toBottomOf="@id/model_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/odometer_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custum_input"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="#636060"
            app:layout_constraintTop_toBottomOf="@id/tv125"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tv126"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Engine Number"
            app:layout_constraintTop_toBottomOf="@id/odometer_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            />
        <EditText
            android:id="@+id/engine_no_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custum_input"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="#636060"
            app:layout_constraintTop_toBottomOf="@id/tv126"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tv127"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Color of Vehicle"
            app:layout_constraintTop_toBottomOf="@id/engine_no_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/color_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custum_input"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="#636060"
            app:layout_constraintTop_toBottomOf="@id/tv127"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tv128"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Chasis Number"
            app:layout_constraintTop_toBottomOf="@id/color_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/chasis_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custum_input"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="#636060"
            app:layout_constraintTop_toBottomOf="@id/tv128"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tv129"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Condition of Vehicle - Body"
            app:layout_constraintTop_toBottomOf="@id/chasis_et"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/covb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custum_input"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="#636060"
            app:layout_constraintTop_toBottomOf="@id/tv129"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tv130"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Condition of Vehicle - Engine"
            app:layout_constraintTop_toBottomOf="@id/covb"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/cove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custum_input"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="#636060"
            app:layout_constraintTop_toBottomOf="@id/tv130"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tv131"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Condition of Tyre"
            app:layout_constraintTop_toBottomOf="@id/cove"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/cot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custum_input"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="#636060"
            app:layout_constraintTop_toBottomOf="@id/tv131"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <TextView
            android:id="@+id/tv132"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="Remarks"
            app:layout_constraintTop_toBottomOf="@id/cot"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/remarks_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/custum_input"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textColorHint="#636060"
            app:layout_constraintTop_toBottomOf="@id/tv132"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />

        <Button
            android:id="@+id/continue_survey_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/remarks_et"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/login_btn_bck"
            android:fontFamily="@font/actor"
            android:text="Continue"
            android:textColor="@color/zomatowhite"
            android:textAllCaps="false"
            android:textSize="25sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>